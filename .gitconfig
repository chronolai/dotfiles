[core]
	editor = vim
	excludesfile = ~/.gitignore
	ignorecase = false

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	log = auto

[alias]
	st = status
	ci = commit
	co = checkout
	br = branch
	df = diff
	la = log --graph --decorate --abbrev-commit --all --pretty=oneline
	laa= log --graph --decorate --abbrev-commit --all --pretty='format:%C(auto)%h %an%x09%d %s'
	tr = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all

[push]
	default = simple

[diff]
	compactionHeuristic = 1
	algorithm = histogram
[pager]
	log = ~/.dotfiles/diff-highlight | less
	show = ~/.dotfiles/diff-highlight | less
	diff = ~/.dotfiles/diff-highlight | less
[http]
	sslVerify = false
[pull]
	ff = only
